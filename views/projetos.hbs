<!--================body =================-->
<section class="portfolio_area area-padding" id="portfolio" style="margin-top: 10%;">
    <div class="container">
        <div class="area-heading">
            <h3 class="line">Projetos Recentes</h3>
        </div>

        <div class="row portfolio-grid">
            {{#each images}}
                <div class="col-lg-6 col-md-6">
                    <form class="proj-form" method="POST" action="/projetos/showProj">
                        <input type="hidden" name="pname" value="{{nome}}"/>    
                        <button type="submit">
                            <div class="single_portfolio imgbtn">
                                <img class="img-fluid w-100" src="/img/project/{{path}}" alt="" style="max-height: 420px !important;">
                                <div class="short_info">
                                    <p>{{nome}}</p>
                                </div>
                            </div>
                        </button>
                    </form>
                </div>

            {{/each}}
        </div>
    </div>
</section>

