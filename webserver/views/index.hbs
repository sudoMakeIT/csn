<!--================Header Menu Area =================-->
<header class="header_area">
    <div class="main_menu">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <a class="navbar-brand logo_h" href="/"><img src="/img/about1r.png" alt=""></a>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="topnav" id="myTopnav">
                    <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                        <i class="fa fa-bars"></i>
                    </a>
                    <a href="/" class="active" onclick="myFunction()">Home</a>
                    <a href="/about" onclick="myFunction()">Sobre</a>
                    <a href="#service" onclick="myFunction()">Serviços</a>
                    <a href="/projetos" onclick="myFunction()">Projetos</a>
                    <a href="#aff" onclick="myFunction()">Afilados</a>
                    <a href="#footer" onclick="myFunction()">Contactos</a>

                </div>
            </div>
        </nav>
    </div>
</header>
<!--================Home Area =================-->
<section id="about" class="about-area area-padding">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="about-img">
                    <img src="/img/about1.png" alt="">
                </div>
            </div>
            <div class="col-lg-6">
                <div id="aboutUs" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        {{#each others}}
                            {{#if welcome}}
                                <div class="carousel-item active">
                            {{else}}
                                <div class="carousel-item">
                            {{/if}}
                                <div class="about-content ">
                                    <h4>{{title}}</h4>
                                    <p>
                                        {{text}}
                                    </p>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                    <a class="carousel-control-prev" href="#aboutUs" role="button" data-slide="prev">
                        <i class="fas fa-chevron-circle-left" style="color:black"></i>
                    </a>
                    <a class="carousel-control-next" href="#aboutUs" role="button" data-slide="next">
                        <i class="fas fa-chevron-circle-right" style="color:black"></i>
                    </a>
                </div>

            </div>
        </div>
    </div>
</section>
<!--================Service Area =================-->
<section id="service" class="service-area area-padding">
    <div class="container">
        <div class="area-heading">
            <h3 class="line">Serviços Prestados</h3>
        </div>
        <div class="row">
            <!-- Single service -->
            {{#each services}}
                <div class="col-md-6 col-xl-3">
                    <div class="single-service">
                        <div class="service-icon">
                            <img src="{{path}}" alt="">
                        </div>
                        <div class="service-content">
                            <h5>{{title}}</h5>
                            <p>
                                {{desc}}
                            </p>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>
<!--================Project Area =================-->
<section class="portfolio_area area-padding" id="portfolio">
    <div class="container">
        <div class="area-heading">
            <h3 class="line">Projetos Recentes</h3>
        </div>

        <div class="row portfolio-grid">
            {{#each images}}
                <div class="col-lg-6 col-md-6">
                    <form class="proj-form" method="POST" action="/projetos/showProj">
                        <input type="hidden" name="pname" value="{{nome}}"/>    
                        <button type="submit">
                            <div class="single_portfolio imgbtn">
                                <img class="img-fluid w-100" src="/img/project/{{path}}" alt="" style="max-height: 420px !important;">
                                <div class="short_info">
                                    <p>{{nome}}</p>
                                </div>
                            </div>
                        </button>
                    </form>
                </div>
            {{/each}}
        </div>
    </div>
</section>
<!--================Afiliados Area =================-->
<section class="aff-area area-padding" id="aff">
    <div class="container">
        <div class="area-heading">
            <h3 class="line">Afiliados</h3>
        </div>
        <div class="row">
            {{#each aff}}
                <div class="col-lg-4 col-sm-12">
                    <div class="aff_img">
                        <img class="img-fluid w-100" src="/img/{{img}}" alt="" >
                    </div>
                </div>
                <div class="col-lg-8 col-sm-12">
                    <div class="aff_info">
                        <h5>{{name}}</h5>
                        <p>{{text}}</p>
                        <a href="{{link}}">Visite-nos em <b>{{link}}</b></a>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>
<!--================Contacts Area =================-->
<section class="contactArea area-padding" id="footer">
    <div class="container">
        <div class="area-heading">
            <h3 class="line">Contactos</h3>

        </div>
        <div class="row justify-content-center">
            {{#each contacts}}
                <div class="col-lg-4 col-md-6 col-sm-7">
                    <div class="contact-box text-center mt-30">
                        <div class="contact-icon">
                            <i class="{{icon}} fa-3x"></i>
                        </div>
                        <div class="contact-content">

                            <h5 class="contact-title">{{toWhat}}</h5>
                            <p>{{text1}}</p>
                            <p>{{text2}}</p>

                        </div> <!-- contact box -->
                    </div>
                </div>
            {{/each}}
        </div> <!-- row -->
    </div>
</section>
